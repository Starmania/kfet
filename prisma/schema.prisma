generator client {
    provider        = "prisma-client-js"
}

datasource db {
    provider             = "postgresql"
    url                  = env("DATABASE_URL")
}

model Article {
    id              Int      @id @default(autoincrement())
    name            String
    description     String?
    sell_price      Decimal
    category        String
    products        Int[]
    image           String?
    deleted         Boolean  @default(false)
}

model Product {
    id              Int      @id @default(autoincrement())
    name            String
    quantity        Int
    buying_price    Decimal
    deleted         Boolean  @default(false)
}

model Sale {
    id              Int      @id @default(autoincrement())
    paiement_method String
    articles        Int[]
    buying_price    Decimal  @default(0)
    sell_price      Decimal
    created_at      DateTime @default(now())
}

model Command {
    id              Int      @id @default(autoincrement())
    title           String
    description     String?
    status          String
    estimated_end   DateTime?
    created_at      DateTime @default(now())
}